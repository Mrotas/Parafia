@model Parafia.Models.Parafia.Ogloszenie

@{
    ViewBag.Title = "Details";
}

<h3>Szczegóły ogłoszenia</h3>

<div>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.Data)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Data)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Tytul)
        </dt>

        <dd>
            @Html.Raw(WebUtility.HtmlDecode(Model.Tytul))
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Tresc)
        </dt>

        <dd>
            @Html.Raw(WebUtility.HtmlDecode(Model.Tresc))
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Zdjecie)
        </dt>

        <dd>
            
            @if (!string.IsNullOrEmpty(Model.Zdjecie))
            {
                <img src="~/Content/Images/@Html.DisplayFor(model => model.Zdjecie)" height="100" width="90" />
            }
        </dd>



    </dl>
</div>
<p>
    @Html.ActionLink("Edycja", "Edit", new { id = Model.OgloszenieId }) |
    @Html.ActionLink("Powrót do listy", "List")
</p>
